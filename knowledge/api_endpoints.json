{
  "version": "1.0",
  "last_updated": "2024-08-20",
  "documentation": {
    "overview": "Complete API documentation for the CrewAI Template system",
    "base_url": "https://api.crewai-template.com/v1",
    "authentication": "Bearer token required for all endpoints"
  },
  "endpoints": [
    {
      "endpoint": "/agents",
      "method": "GET",
      "description": "Retrieve all configured agents",
      "parameters": {
        "enabled": "boolean - filter by enabled status",
        "role": "string - filter by agent role"
      },
      "response": "List[AgentConfig]"
    },
    {
      "endpoint": "/agents",
      "method": "POST",
      "description": "Create a new agent configuration",
      "body": "AgentConfig object",
      "response": "AgentConfig"
    },
    {
      "endpoint": "/tasks",
      "method": "GET",
      "description": "Retrieve all configured tasks",
      "parameters": {
        "agent": "string - filter by assigned agent"
      },
      "response": "List[TaskConfig]"
    },
    {
      "endpoint": "/knowledge",
      "method": "GET",
      "description": "Retrieve all knowledge sources",
      "response": "List[KnowledgeSource]"
    },
    {
      "endpoint": "/crew/run",
      "method": "POST",
      "description": "Execute a crew with given inputs",
      "body": {
        "inputs": "dict - input variables for the crew",
        "crew_name": "string - optional crew name"
      },
      "response": "CrewOutput"
    }
  ],
  "error_codes": {
    "400": "Bad Request - Invalid input parameters",
    "401": "Unauthorized - Missing or invalid authentication",
    "404": "Not Found - Resource not found",
    "500": "Internal Server Error - Server-side error"
  }
}
